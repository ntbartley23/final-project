<div id="sign-in">



  <div id="login">
    <%= form_tag '/teachers' do %>
    <!-- ruby method   :argument1, arg2, hash with key: "value" -->
    <%= text_field_tag :email, nil, placeholder: "email" %>
    <%= password_field_tag :password, nil, placeholder: "password" %>
    <%= submit_tag "log in" %>
    <% end %>
   
